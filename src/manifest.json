{
  "name": "Timer",
  "manifest_version": 2,
  "description": "Timerです",
  "version": "1.0",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "assets/icon.png"
  },
  "permissions": ["tabs", "storage", "alarms"],
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
